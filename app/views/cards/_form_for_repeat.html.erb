<%= simple_form_for :card, url: { action: 'check_card' } do |f| %>
  <%= f.label @card.translated_text, required: false, as: :text %>
  <%= f.input_field :original_text, required: false %>
  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
  <%= hidden_field_tag 'id', @card.id %>
  <%= f.button :submit, 'Check card' %>
<% end %>
